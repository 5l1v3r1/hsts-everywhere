{
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true,
    "node": true,
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "max-len": "off",
    "no-console": "off",
    "no-global-assign": "off",
    "quotes": ["error", "single"]
  }
}
